{
  "name": "@whimbrel/filesystem",
  "version": "0.0.2",
  "description": "File System abstractions for Whimbrel",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf ./dist",
    "publish": "npm publish --access public"
  },
  "peerDependencies": {
    "@whimbrel/core-api": "^0.0.2"
  },
  "dependencies": {
    "@whimbrel/core-api": "*",
    "jsonc-parser": "^3.3.1"
  },
  "devDependencies": {
    "@whimbrel-test/tree-fixtures": "*",
    "@types/node": "^24.3.0",
    "vite": "^7.1.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
