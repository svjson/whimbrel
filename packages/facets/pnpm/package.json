{
  "name": "@whimbrel/pnpm",
  "version": "0.1.0",
  "description": "pnpm Facet for Whimbrel",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf ./dist && rimraf ./node_modules",
    "publish": "npm publish --access public"
  },
  "dependencies": {
    "@whimbrel/core-api": "*",
    "@whimbrel/facet": "*",
    "@whimbrel/flow": "*",
    "@whimbrel/package-json": "*",
    "@whimbrel/project": "*",
    "@whimbrel/script-parser": "*"
  },
  "devDependencies": {
    "@whimbrel/core-api": "*",
    "@whimbrel-test/tree-fixtures": "*",
    "@whimbrel-test/context-fixtures": "*",
    "@types/node": "^24.3.0",
    "vite": "^7.1.2",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
