{
  "name": "@whimbrel/pnpm",
  "version": "0.1.3",
  "description": "pnpm Facet for Whimbrel",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf ./dist && rimraf ./node_modules"
  },
  "dependencies": {
    "@whimbrel/array": "workspace:*",
    "@whimbrel/core-api": "workspace:*",
    "@whimbrel/facet": "workspace:*",
    "@whimbrel/flow": "workspace:*",
    "@whimbrel/package-json": "workspace:*",
    "@whimbrel/project": "workspace:*",
    "@whimbrel/script-parser": "workspace:*",
    "@whimbrel/struct-file": "workspace:*"
  },
  "devDependencies": {
    "@whimbrel/actor": "workspace:*",
    "@whimbrel/filesystem": "workspace:*",
    "@whimbrel/npm": "workspace:*",
    "@whimbrel/node": "workspace:*",
    "@whimbrel-test/tree-fixtures": "workspace:*",
    "@whimbrel-test/context-fixtures": "workspace:*",
    "@whimbrel-test/step-execution-fixtures": "workspace:*",
    "@types/node": "^24.3.0",
    "vite": "^7.1.2",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
