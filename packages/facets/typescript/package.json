{
  "name": "@whimbrel/typescript",
  "version": "0.1.3",
  "description": "TypeScript Facet for Whimbrel",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf ./dist && rimraf ./node_modules"
  },
  "dependencies": {
    "@babel/parser": "^7.28.5",
    "@babel/traverse": "^7.28.5",
    "@babel/types": "^7.28.5",
    "@whimbrel/array": "workspace:*",
    "@whimbrel/core-api": "workspace:*",
    "@whimbrel/facet": "workspace:*",
    "@whimbrel/filesystem": "workspace:*",
    "@whimbrel/flow": "workspace:*",
    "@whimbrel/package-json": "workspace:*"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.28.0",
    "@types/node": "^24.3.0",
    "@whimbrel-test/asset-fixtures": "workspace:*",
    "@whimbrel-test/context-fixtures": "workspace:*",
    "@whimbrel-test/tree-fixtures": "workspace:*",
    "@whimbrel/core": "workspace:*",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
