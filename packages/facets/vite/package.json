{
  "name": "@whimbrel/vite",
  "version": "0.1.0",
  "description": "Vite Facet for Whimbrel",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf ./dist && rimraf ./node_modules",
    "publish": "npm publish --access public"
  },
  "peerDependencies": {
    "@whimbrel/filesystem": "^0.1.0"
  },
  "dependencies": {
    "@whimbrel/array": "*",
    "@whimbrel/core-api": "*",
    "@whimbrel/facet": "*",
    "@whimbrel/filesystem": "*",
    "@whimbrel/flow": "*",
    "@whimbrel/package-json": "*",
    "@whimbrel/typescript": "*"
  },
  "devDependencies": {
    "@whimbrel/core": "*",
    "@whimbrel/struct-file": "*",
    "@whimbrel/typescript": "*",
    "@whimbrel-test/asset-fixtures": "*",
    "@whimbrel-test/tree-fixtures": "*",
    "@whimbrel-test/context-fixtures": "*",
    "@types/node": "^24.3.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
