{
  "name": "whimbrel-cli",
  "version": "0.1.3",
  "description": "CLI-based automation and analysis tool",
  "license": "ISC",
  "author": "Sven Johansson",
  "homepage": "https://github.com/svjson/whimbrel",
  "repository": {
    "type": "git",
    "url": "https://github.com/svjson/whimbrel.git"
  },
  "bugs": {
    "url": "https://github.com/svjson/whimbrel/issues"
  },
  "engines": {
    "node": ">=20"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "whim": "dist/index.cjs"
  },
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf ./dist && rimraf ./node_modules"
  },
  "peerDependencies": {
    "chalk": "^5.6.0",
    "commander": "^14.0.0",
    "ora": "^8.2.0",
    "strip-ansi": "^7.1.0"
  },
  "dependencies": {
    "@whimbrel/array": "workspace:*",
    "@whimbrel/core": "workspace:*",
    "@whimbrel/core-api": "workspace:*",
    "@whimbrel/docker-compose": "workspace:*",
    "@whimbrel/dotenv": "workspace:*",
    "@whimbrel/express": "workspace:*",
    "@whimbrel/facet": "workspace:*",
    "@whimbrel/fastify": "workspace:*",
    "@whimbrel/filesystem": "workspace:*",
    "@whimbrel/git": "workspace:*",
    "@whimbrel/gitignore": "workspace:*",
    "@whimbrel/koa": "workspace:*",
    "@whimbrel/license": "workspace:*",
    "@whimbrel/node": "workspace:*",
    "@whimbrel/npm": "workspace:*",
    "@whimbrel/package-json": "workspace:*",
    "@whimbrel/pnpm": "workspace:*",
    "@whimbrel/project": "workspace:*",
    "@whimbrel/source": "workspace:*",
    "@whimbrel/target": "workspace:*",
    "@whimbrel/tsconfig-json": "workspace:*",
    "@whimbrel/turborepo": "workspace:*",
    "@whimbrel/typescript": "workspace:*",
    "@whimbrel/vite": "workspace:*",
    "@whimbrel/walk": "workspace:*",
    "chalk": "^5.6.0",
    "commander": "^14.0.0",
    "lodash.kebabcase": "^4.1.1",
    "ora": "^8.2.0",
    "strip-ansi": "^7.1.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "rimraf": "^6.0.1",
    "vite": "^7.1.2",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
